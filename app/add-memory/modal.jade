form(name="form")
    h2 New Memory

    md-button(ng-model="vm.file" name="file" ngf-select ngf-pattern="'image/*'"
              ngf-accept="'image/*'" ngf-max-size="20MB" ngf-min-height="100"
              ngf-resize="{width: 100, height: 100}") Select

    //Server authentication error
    p(ng-show="vm.error" class="text-danger" ng-bind="vm.error")

    //Email input
    textarea(ng-model="vm.message" ng-model-options="{ updateOn: 'default blur', debounce: { default: 1000, blur: 0 } }" name="message" class="form-control" placeholder="Message" required autofocus)
    button(type="submit" ng-click="vm.submit()") Submit

p(ng-if="vm.file") Image thumbnail:
    img(ngf-thumbnail="vm.file" ng-if="vm.file")