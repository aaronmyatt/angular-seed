//include ../devutil.jade

div(class="memory-modal")

    div(layout="row" layout-align="end center")
        md-button(ng-click="vm.hide()")
            ng-md-icon(icon="close" size="24")
    md-card
        img(ng-show="vm.locals.image" ng-src="{{vm.locals.image}}" class="md-card-image")
        md-card-content
            div(layout="row" layout-align="center center")
                p(class="") {{vm.locals.message}}
        small Created by: {{vm.locals.user}}
        md-button(ng-click="vm.hide()") Close
